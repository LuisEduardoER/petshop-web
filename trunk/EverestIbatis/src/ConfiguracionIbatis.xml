<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	
	<typeAliases>	
	
		<typeAlias alias="clienteAlias" 	type="com.veterinaria.beans.Cliente" />
		<typeAlias alias="usuarioAlias" 	type="com.veterinaria.beans.Usuario" />
		<typeAlias alias="correlativoAlias" type="com.veterinaria.beans.Correlativo" />
		<typeAlias alias="mascotaAlias" 	type="com.veterinaria.beans.Mascota" />
		<typeAlias alias="tipoAnimalAlias" 	type="com.veterinaria.beans.TipoAnimal" />
		<typeAlias alias="rolAlias" 		type="com.veterinaria.beans.Rol" />
		<typeAlias alias="opcionAlias" 		type="com.veterinaria.beans.Opcion" />
		<typeAlias alias="correlativoAlias" type="com.veterinaria.beans.Correlativo" />
		<typeAlias alias="citaAlias" 		type="com.veterinaria.beans.Cita" />
		<typeAlias alias="localAlias" 		type="com.veterinaria.beans.Local" />
		<typeAlias alias="proveedorAlias" 	type="com.veterinaria.beans.Proveedor" />
		<typeAlias alias="tipoProductoAlias" type="com.veterinaria.beans.TipoProducto" />
		<typeAlias alias="turnoAlias" 		type="com.veterinaria.beans.Turno" />
		<typeAlias alias="rolOpcionAlias" 	type="com.veterinaria.beans.RolOpcion" />
		<typeAlias alias="medicoAlias" 		type="com.veterinaria.beans.Medico" />
		<typeAlias alias="detalleCitaAlias" type="com.veterinaria.beans.DetalleCita" />
		<typeAlias alias="servicioAlias" 	type="com.veterinaria.beans.Servicio" />
		 	           	
	</typeAliases>
	
	<environments default="development">
		<environment id="development">		
			<transactionManager type="JDBC" />			
			<dataSource type="UNPOOLED">
						<property name="driver" value="com.mysql.jdbc.Driver" />
						<property name="url" value="jdbc:mysql://localhost:3306/petshop" />
						<property name="username" value="root" />
						<property name="password" value="mysql" />
			</dataSource>
		</environment>
	</environments>	
	
	<mappers>
	    
	    <mapper resource="com/veterinaria/xml/ClienteXML.xml" />
	    <mapper resource="com/veterinaria/xml/UsuarioXML.xml" />
	    <mapper resource="com/veterinaria/xml/CorrelativoXML.xml" />
	    <mapper resource="com/veterinaria/xml/MascotaXML.xml" />
	    <mapper resource="com/veterinaria/xml/TipoAnimalXML.xml" />
	    <mapper resource="com/veterinaria/xml/RolXML.xml" />
	    <mapper resource="com/veterinaria/xml/OpcionXML.xml" />
	    <mapper resource="com/veterinaria/xml/CorrelativoXML.xml" />
	    <mapper resource="com/veterinaria/xml/CitaXML.xml" />
	    <mapper resource="com/veterinaria/xml/LocalXML.xml" />
	    <mapper resource="com/veterinaria/xml/ProveedorXML.xml" />
	    <mapper resource="com/veterinaria/xml/TipoProductoXML.xml" />
	    <mapper resource="com/veterinaria/xml/TurnoXML.xml" />
	    <mapper resource="com/veterinaria/xml/RolOpcionXML.xml" />
	    <mapper resource="com/veterinaria/xml/MedicoXML.xml" />
	    <mapper resource="com/veterinaria/xml/DetalleCitaXML.xml" />
	    <mapper resource="com/veterinaria/xml/ServicioXML.xml" />
	    
	</mappers>
</configuration>

